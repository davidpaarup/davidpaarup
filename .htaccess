# Enable URL rewriting
RewriteEngine On

# Redirect language pages to their respective folders
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Handle root directory - default to English
DirectoryIndex index.html

